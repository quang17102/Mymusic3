<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/controlSong"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:weightSum="2"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtSong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="00:00" />
        <TextView

            android:id="@+id/txtSongTotal"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="00:00" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/skSong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:max="100"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_margin="2dp"

        />

    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.8"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#0038B983">

        <ImageButton
            android:id="@+id/btnRotate"
            android:layout_width="38dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:background="#00FFFF00"
            android:scaleType="centerInside"
            android:src="@drawable/rotate" />
        <ImageButton
            android:id="@+id/btnPre"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rsz_pre"
            android:background="#00FFFF00"
            />

        <ImageButton
            android:id="@+id/btnPause"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rsz_play"
            android:background="#00FFFF00"
            />
        <ImageButton
            android:id="@+id/btnNext"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rsz_next"
            android:background="#00FFFF00"/>

        <ImageButton
            android:id="@+id/btnRandom"
            android:layout_width="46dp"
            android:layout_height="49dp"
            android:layout_weight="1"
            android:background="#00FFFF00"
            android:scaleType="fitCenter"
            android:src="@drawable/random" />
    </LinearLayout>

</LinearLayout>